@model IEnumerable<WebDeveloper.Model.DTO.AuthorsModelView>

<label id="AuthorsCount"></label>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.au_lname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.au_fname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.au_phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.au_city)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.au_lname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.au_fname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.au_phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.au_city)
            </td>
            <td>
                <a href="#" onclick="getModal('@Url.Action("Editar",new { area="Authoral", id=@item.au_id })'); return false;"
                   data-toggle="modal" data-target="#modal-container"
                   class="btn btn-success btn-sm">
                    <span class="glyphicon glyphicon-edit"></span> Edit
                </a>
                <a href="#" onclick="getModal('@Url.Action("Detalle",new { area="Authoral", id=@item.au_id })'); return false;" class="btn btn-success btn-sm" data-toggle="modal" data-target="#modal-container">
                    <span class="glyphicon glyphicon-list"></span> Detail
                </a>
                <a href="#" onclick="getModal('@Url.Action("Eliminar",new { area="Authoral", id=@item.au_id })'); return false;" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#modal-container">
                    <span class="glyphicon glyphicon-remove"></span> Delete
                </a>
            </td>
        </tr>
    }
</table>
@CustomHelpers.GetModal()
